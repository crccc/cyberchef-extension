{
  "manifest_version": 3,
  "name": "CyberChef Extension",
  "version": "1.0.0",
  "description": "Chrome extension with side panel to use CyberChef for content processing",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open CyberChef Side Panel"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
